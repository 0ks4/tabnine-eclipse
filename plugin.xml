<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

	<!-- Extension point : The processors to compute content assist for Text Editor -->
	<extension point="org.eclipse.ui.genericeditor.contentAssistProcessors"
		id="TabNineGenericTextCompletionProposalComputer"
		name="TabNine Generic Text Proposal Computer"
	>
		<contentAssistProcessor class="com.tabnine.eclipse.TabNineContentAssistProcessor"
			contentType="TabNine Generic Text Types"
		></contentAssistProcessor>
	</extension>
	
	<extension point="org.eclipse.core.contenttype.contentTypes"> 
		<content-type id="TabNineGenericTextTypes"
			name="TabNine Generic Text Types"
			base-type="org.eclipse.core.runtime.text"
			file-extensions="html,jsp,yaml,py,c,txt,js"
		/>
	</extension> 
	
